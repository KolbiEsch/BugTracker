@{
    ViewData["Title"] = "Home Page";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
      google.charts.load('current', {'packages':['corechart']});
      google.charts.setOnLoadCallback(drawChart);

      function drawChart() {

        var data = google.visualization.arrayToDataTable([
          ['Priority', 'Number Of Tickets'],
          ['Low',     @ViewData["LowCount"]],
          ['Medium', @ViewData["MediumCount"]],
          ['High', @ViewData["HighCount"]]
        ]);

        var options = {
          title: 'My Active Tickets By Priority',
          colors: ['#0000ff', '#ffbf00', '#ff4500']
        };

        var chart = new google.visualization.PieChart(document.getElementById('piechart'));

        chart.draw(data, options);
      }
    </script>

  
      <div class="row justify-content-center" style="width:100%">
          <div id="piechart" class="col-8" style="width: 900px; height: 500px;"></div>
      </div> 
 


