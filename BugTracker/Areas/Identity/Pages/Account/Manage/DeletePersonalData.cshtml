@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}
    <h3>@ViewData["Title"]</h3>

        <p>
            <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
        </p>
    
        <form id="delete-user" class="form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (Model.RequirePassword)
            {
            <div class="form__group--center">
                <label asp-for="Input.Password" class="form__label"></label>
                <input asp-for="Input.Password" class="form__input" autocomplete="current-password" aria-required="true" placeholder="Enter your current password"/>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            }
            <button class="form__btn form__btn--center" type="submit">Delete data and close my account</button>
        </form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
