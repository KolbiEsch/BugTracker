@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}
    <h3>@ViewData["Title"]</h3>
   
        <p class="mt-small">Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
        <p class="mt-small">
            <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
        </p>
        <form id="download-data" class="form" asp-page="DownloadPersonalData" method="post">
            <button class="form__btn form__btn--center" type="submit">Download</button>
        </form>
        <p>
            <a id="delete" asp-page="DeletePersonalData" class="form__link">Delete</a>
        </p>
    
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
