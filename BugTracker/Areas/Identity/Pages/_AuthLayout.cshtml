<!DOCTYPE html>
@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<section class="authenticate">
    <ul class="authenticate__list">
        <li class="authenticate__item">
            <a class="authenticate__link" href='/Identity/Account/Login'>Sign In</a>
        </li>
        <li class="authenticate__item">
            <a class="authenticate__link" href='/Identity/Account/Register'>Sign Up</a>
        </li>
    </ul>
    <div class="authenticate__body">
        @RenderBody()
    </div>
</section>



@section Scripts{
    @RenderSection("Scripts", required: false)
    <script>
        $(function () {
            var current = location.pathname;
            $('.authenticate__list li a').each(function () {
                var $this = $(this);
                if (current.indexOf($this.attr('href')) !== -1) {
                    $this.addClass('active');
                }
            })
        })
    </script>

    
}